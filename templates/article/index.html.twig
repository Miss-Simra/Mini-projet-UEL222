{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <h1 class="p-3 text-center bg-primary text-white">Article index</h1>

    <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-center mt-3">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" href="{{ path('article_index') }}">Home</a> 
      <a class="nav-item nav-link" href="{{ path('category_index') }}">Categories</a>
      <a class="nav-item nav-link" href="#">About us</a>
      <a class="nav-item nav-link" href="#">My account</a>
    </div>
    </nav>

    <div class="m-4">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Category</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>
                    {% if article.Category.name is defined %}
                        {{ article.Category.name }}
                    {% endif %}
                </td>
                <td>{{ article.content }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="m-1 btn btn-primary" role="button">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="m-1 btn btn-primary" role="button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a href="{{ path('article_new') }}" class="m-4 btn btn-primary" role="button">Create new</a>
{% endblock %}
